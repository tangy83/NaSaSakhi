// NASA Sakhi - Complete Prisma Schema
// Phase 2: Volunteer Admin & Multi-Language Platform
// Synced from backend/prisma/schema.prisma â€” keep both files in sync.

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// ============================================================================
// STAGE 2: Core Models
// ============================================================================

model Organization {
  id                   String             @id @default(uuid())
  customId             String?            @unique @db.VarChar(10) // ORG00001 or BR00001a
  entityType           EntityType         @default(ORGANIZATION)
  parentOrganizationId String?
  name                 String
  registrationType     RegistrationType
  registrationNumber   String
  yearEstablished      Int
  description          String?
  faithId              String?
  status               OrganizationStatus @default(PENDING)
  websiteUrl           String?

  // Self-referential relationship for branches
  parentOrganization Organization?  @relation("OrgBranches", fields: [parentOrganizationId], references: [id])
  childBranches      Organization[] @relation("OrgBranches")

  // Relationships
  branches                 OrganizationBranch[]
  contacts                 ContactInformation[]
  languages                OrganizationLanguage[]
  documents                Document[]
  reviewNotes              ReviewNote[]
  translationJobs          TranslationJob[]
  organizationTranslations OrganizationTranslation[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([name, status])
  @@index([entityType, status])
  @@map("organizations")
}

enum EntityType {
  ORGANIZATION
  BRANCH
}

model OrgIdCounter {
  id         Int @id @default(autoincrement())
  nextOrgNum Int @default(1)

  @@map("org_id_counter")
}

enum RegistrationType {
  NGO
  TRUST
  GOVERNMENT
  PRIVATE
  OTHER
}

enum OrganizationStatus {
  PENDING
  APPROVED
  REJECTED
  CLARIFICATION_REQUESTED
}

model OrganizationBranch {
  id             String   @id @default(uuid())
  organizationId String
  addressLine1   String
  addressLine2   String?
  cityId         String
  stateId        String
  pinCode        String   @db.VarChar(6)
  latitude       Decimal? @db.Decimal(10, 8)
  longitude      Decimal? @db.Decimal(11, 8)

  // Relationships
  organization       Organization        @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  city               City                @relation(fields: [cityId], references: [id])
  state              State               @relation(fields: [stateId], references: [id])
  timings            BranchTimings[]
  categories         BranchCategory[]
  resources          BranchResource[]
  branchTranslations BranchTranslation[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([cityId, stateId])
  @@index([pinCode])
  @@map("organization_branches")
}

model ContactInformation {
  id              String  @id @default(uuid())
  organizationId  String
  isPrimary       Boolean @default(false)
  name            String
  isdCode         String  @default("+91") @db.VarChar(5)
  phone           String  @db.VarChar(15)
  email           String
  facebookUrl     String?
  instagramHandle String?
  twitterHandle   String?

  // Relationships
  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("contact_information")
}

model BranchTimings {
  id        String    @id @default(uuid())
  branchId  String
  dayOfWeek DayOfWeek
  openTime  String? // Format: "HH:MM" (24-hour)
  closeTime String? // Format: "HH:MM" (24-hour)
  isClosed  Boolean   @default(false)

  // Relationships
  branch OrganizationBranch @relation(fields: [branchId], references: [id], onDelete: Cascade)

  @@unique([branchId, dayOfWeek])
  @@map("branch_timings")
}

enum DayOfWeek {
  MONDAY
  TUESDAY
  WEDNESDAY
  THURSDAY
  FRIDAY
  SATURDAY
  SUNDAY
}

// ============================================================================
// STAGE 3: Reference Data Models
// ============================================================================

model ServiceCategory {
  id           String      @id @default(uuid())
  name         String
  targetGroup  TargetGroup
  displayOrder Int

  // Relationships
  resources ServiceResource[]
  branches  BranchCategory[]

  @@unique([name, targetGroup])
  @@map("service_categories")
}

enum TargetGroup {
  CHILDREN
  WOMEN
}

model ServiceResource {
  id          String  @id @default(uuid())
  categoryId  String
  name        String
  description String?

  // Relationships
  category ServiceCategory  @relation(fields: [categoryId], references: [id])
  branches BranchResource[]

  @@map("service_resources")
}

model State {
  id   String @id @default(uuid())
  name String @unique
  code String @unique @db.VarChar(2)

  // Relationships
  cities   City[]
  branches OrganizationBranch[]

  @@map("states")
}

model City {
  id      String @id @default(uuid())
  name    String
  stateId String

  // Relationships
  state    State                @relation(fields: [stateId], references: [id])
  branches OrganizationBranch[]

  @@unique([name, stateId])
  @@map("cities")
}

model Language {
  id             String  @id @default(uuid())
  name           String  @unique
  code           String  @unique @db.VarChar(10)
  isActive       Boolean @default(true)
  // Phase 2: font & script metadata
  scriptFamily   String  @default("Latin") // e.g., "Devanagari", "Tamil", "Arabic"
  isRTL          Boolean @default(false) // true for Urdu, Sindhi, Kashmiri
  fontFamily     String  @default("Open Sans") // CSS font-family name
  googleFontName String  @default("Open+Sans") // Google Fonts identifier

  // Relationships
  organizations            OrganizationLanguage[]
  organizationTranslations OrganizationTranslation[]
  branchTranslations       BranchTranslation[]
  translationJobs          TranslationJob[]

  @@map("languages")
}

model Faith {
  id   String @id @default(uuid())
  name String @unique

  @@map("faiths")
}

model SocialCategory {
  id   String @id @default(uuid())
  name String @unique

  @@map("social_categories")
}

// Junction Tables (Many-to-Many relationships)
model BranchCategory {
  branchId   String
  categoryId String

  branch   OrganizationBranch @relation(fields: [branchId], references: [id], onDelete: Cascade)
  category ServiceCategory    @relation(fields: [categoryId], references: [id])

  @@id([branchId, categoryId])
  @@map("branch_categories")
}

model BranchResource {
  branchId   String
  resourceId String

  branch   OrganizationBranch @relation(fields: [branchId], references: [id], onDelete: Cascade)
  resource ServiceResource    @relation(fields: [resourceId], references: [id])

  @@id([branchId, resourceId])
  @@map("branch_resources")
}

model OrganizationLanguage {
  organizationId String
  languageId     String

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  language     Language     @relation(fields: [languageId], references: [id])

  @@id([organizationId, languageId])
  @@map("organization_languages")
}

// ============================================================================
// STAGE 4: Auth & Documents
// ============================================================================

model User {
  id            String    @id @default(uuid())
  email         String?   @unique
  emailVerified DateTime?
  name          String?
  password      String? // Hashed with bcrypt
  role          UserRole  @default(ORGANIZATION)
  volunteerId   String?   @unique // Used for volunteer login (in place of email)

  // Relationships
  accounts    Account[]
  sessions    Session[]
  reviewNotes ReviewNote[]
  auditLogs   AuditLog[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

enum UserRole {
  ORGANIZATION
  ADMIN
  SUPER_ADMIN
  VOLUNTEER
}

model Account {
  id                String  @id @default(uuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model Document {
  id             String       @id @default(uuid())
  organizationId String
  type           DocumentType
  filename       String
  fileUrl        String
  fileSize       Int // in bytes
  mimeType       String

  // Relationships
  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  uploadedAt DateTime @default(now())

  @@map("documents")
}

enum DocumentType {
  REGISTRATION_CERTIFICATE
  LOGO
  ADDITIONAL_CERTIFICATE
}

model RegistrationDraft {
  id        String   @id @default(uuid())
  token     String   @unique @default(uuid())
  email     String?
  draftData Json // Stores entire form state as JSON
  expiresAt DateTime

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([token])
  @@index([email])
  @@map("registration_drafts")
}

// ============================================================================
// PHASE 2: Volunteer Admin & Translation Models
// ============================================================================

enum TranslationStatus {
  PENDING_TRANSLATION
  MACHINE_TRANSLATED
  VOLUNTEER_REVIEWED
  TRANSLATION_FAILED
  CANCELLED
}

// Queues and tracks a translation job per org per language
model TranslationJob {
  id             String            @id @default(uuid())
  organizationId String
  languageId     String
  status         TranslationStatus @default(PENDING_TRANSLATION)
  retryCount     Int               @default(0)
  errorMessage   String?

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  language     Language     @relation(fields: [languageId], references: [id], onDelete: Restrict)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([organizationId, languageId])
  @@index([status])
  @@map("translation_jobs")
}

// Stores translated content per organization per language per field
model OrganizationTranslation {
  id             String            @id @default(uuid())
  organizationId String
  languageId     String
  fieldName      String // e.g., "name", "description", "contactNotes"
  translatedText String            @db.Text
  status         TranslationStatus @default(PENDING_TRANSLATION)
  translatedBy   String? // User.id of volunteer who reviewed it

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  language     Language     @relation(fields: [languageId], references: [id], onDelete: Restrict)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([organizationId, languageId, fieldName])
  @@index([organizationId, languageId])
  @@map("organization_translations")
}

// Stores translated content per branch per language per field
model BranchTranslation {
  id             String            @id @default(uuid())
  branchId       String
  languageId     String
  fieldName      String // e.g., "description", "addressNotes"
  translatedText String            @db.Text
  status         TranslationStatus @default(PENDING_TRANSLATION)
  translatedBy   String? // User.id of volunteer who reviewed it

  branch   OrganizationBranch @relation(fields: [branchId], references: [id], onDelete: Cascade)
  language Language           @relation(fields: [languageId], references: [id], onDelete: Restrict)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([branchId, languageId, fieldName])
  @@map("branch_translations")
}

// Volunteer review notes attached to an organization's review action
model ReviewNote {
  id             String             @id @default(uuid())
  organizationId String
  reviewerId     String // User.id of the volunteer
  note           String             @db.Text
  statusBefore   OrganizationStatus
  statusAfter    OrganizationStatus

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  reviewer     User         @relation(fields: [reviewerId], references: [id])

  createdAt DateTime @default(now())

  @@map("review_notes")
}

// Immutable audit trail for all significant state changes
model AuditLog {
  id         String   @id @default(uuid())
  actorId    String // User.id who performed the action
  actorRole  UserRole
  action     String // e.g., "ORG_APPROVED", "LANGUAGE_DEACTIVATED", "TRANSLATION_REVIEWED"
  entityType String // e.g., "Organization", "Language", "TranslationJob"
  entityId   String
  metadata   Json? // Additional structured context

  actor User @relation(fields: [actorId], references: [id])

  createdAt DateTime @default(now())

  @@index([entityType, entityId])
  @@index([actorId])
  @@map("audit_logs")
}

// ============================================================================
// Health Check (testing utility)
// ============================================================================

model HealthCheck {
  id        String   @id @default(uuid())
  status    String   @default("ok")
  timestamp DateTime @default(now())
  message   String?

  @@map("health_checks")
}
