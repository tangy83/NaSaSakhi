							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"email\": \"user@example.com\",\n  \"draftData\": {\n    \"organizationName\": \"Example NGO\",\n    \"registrationType\": \"NGO\",\n    \"registrationNumber\": \"NGO123456\",\n    \"yearEstablished\": 2020\n  }\n}"
						},
						"url": {
