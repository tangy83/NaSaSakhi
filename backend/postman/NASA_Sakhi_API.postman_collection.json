						"body": {
							"mode": "raw",
							"raw": "{\n  \"organizationName\": \"Example NGO\",\n  \"registrationType\": \"NGO\",\n  \"registrationNumber\": \"NGO123456\",\n  \"yearEstablished\": 2020,\n  \"websiteUrl\": \"https://example.com\",\n  \"primaryContact\": {\n    \"name\": \"John Doe\",\n    \"phone\": \"9876543210\",\n    \"email\": \"john@example.com\"\n  },\n  \"categoryIds\": [\"{{category_id}}\"],\n  \"resourceIds\": [\"{{resource_id}}\"],\n  \"branches\": [\n    {\n      \"addressLine1\": \"123 Main Street, Koramangala\",\n      \"cityId\": \"{{city_id}}\",\n      \"stateId\": \"{{state_id}}\",\n      \"pinCode\": \"560095\"\n    }\n  ],\n  \"languageIds\": [\"{{language_id}}\"],\n  \"documents\": {\n    \"registrationCertificateUrl\": \"/uploads/documents/certificate.pdf\"\n  }\n}"
						},
						"url": {
							"raw": "{{base_url}}/registration/submit",
							"host": ["{{base_url}}"],
							"path": ["registration", "submit"]
