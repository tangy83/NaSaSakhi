# EditorConfig helps maintain consistent coding styles across editors and IDEs
# https://editorconfig.org

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 100

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# JSON files
[*.json]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# TypeScript/JavaScript
[*.{js,ts,tsx,jsx}]
indent_size = 2
quote_type = single

# Python (for potential scripts)
[*.py]
indent_size = 4

# Shell scripts
[*.sh]
indent_size = 2
end_of_line = lf

# Makefile
[Makefile]
indent_style = tab

# Batch files (Windows)
[*.{cmd,bat}]
end_of_line = crlf

# Package files
[{package.json,package-lock.json}]
indent_size = 2

# Dockerfile
[Dockerfile*]
indent_size = 2

# Prisma schema
[*.prisma]
indent_size = 2
