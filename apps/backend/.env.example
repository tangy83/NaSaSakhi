# Backend Environment Variables
# Copy this file to .env.backend and fill in your values

# Node Environment
NODE_ENV=staging
PORT=4000

# Database Connection
DATABASE_URL=postgresql://naarisamata_user:PASSWORD@NaSaSakhiDB_IP:5432/naarisamata_staging

# Frontend CORS Origins (must whitelist frontend URL)
FRONTEND_URL=http://NaSaSakhiFEStg_IP
FRONTEND_URL_STAGING=http://NaSaSakhiFEStg_IP
FRONTEND_URL_PROD=https://naarisamata.org

# NextAuth (must match frontend exactly)
NEXTAUTH_URL=http://NaSaSakhiFEStg_IP
NEXTAUTH_SECRET=<GENERATE_WITH: openssl rand -base64 32>

# MySQL (for data migration - temporary)
MYSQL_HOST=your-mysql-host
MYSQL_PORT=3306
MYSQL_DATABASE=sakhi
MYSQL_USER=your-mysql-user
MYSQL_PASSWORD=your-mysql-password

# External Services (add later)
# GOOGLE_TRANSLATE_API_KEY=
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_S3_BUCKET=
# SENDGRID_API_KEY=
# EMAIL_FROM=

# Optional
NEXT_TELEMETRY_DISABLED=1
